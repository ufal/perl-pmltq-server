<!DOCTYPE html>
<html>
  <head>
    %= asset "bootstrap.css"
    %= asset "bootstrap.js"
    <title><%= title %></title>
  </head>
  <body>


<div class="navbar navbar-default" role="navigation">



        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">PMLTQ SERVER</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              
<!--
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
-->           
              %if (is_user_authenticated and has_priv('admin')){
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Server settings <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li class="dropdown-header">PMLTQ users</li>
                  <li><%= link_to '/admin/user/add'=> begin %> Add user <% end %></li>
                  <li><%= link_to '/admin/user/list' => begin %> Users <% end %></li>
                  <li class="divider"></li>
                  <li class="dropdown-header">Treebanks</li>
                  <li><%= link_to '/admin/treebank/add'=> begin %> Add treebank <% end %></li>
                  <li><%= link_to url_for("/admin/treebank/list")->to_abs => begin %> Treebanks <% end %></li>
                  
                </ul>
              </li>
             %}
              
            </ul>

             %if (is_user_authenticated){
            <ul class="nav navbar-nav pull-right">
             <li> <%= link_to current_user->{'name'} => '/profile'%></li>
             <li><a href="/logout">Logout</a></li>
            </ul>
             %} else {

<form class="form-inline navbar-form pull-right" action="/" method="post" role="form">
  <div class="form-group">
    <label class="sr-only" for="username">Username</label>
    <input type="text" class="form-control outline" name="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label class="sr-only" for="pass">Password</label>
    <input type="password" class="form-control outline" name="pass" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Sign in</button>
</form>             
             %}   
          </div><!--/.nav-collapse -->
        </div>
      </div>
<div class="container">
  <div class="page-header">
    <h1 style="text-align:center"><%= title %></h1>
  </div>
  <%= content %>
</div>  

  </body>
</html>



